	<div id="new_matches" 
				<% if  session["type_user"].to_s == $admin %>  
					 style="position: absolute; left: 320px; top: 50px; z-index:1;"
				<% else %>
						style="position: absolute; left: 300px; top: 50px; z-index:1;"
				<% end %>
	>	

      <h2> New Pool </h3> 
        
      <% names=  Array.new %>
      <% (@number*2).times do |i|%>
        <% names[i*2]= "local#{i}" %>
        <% names[i*2+1]= "visitor#{i}" %>
      <%end%>

      <% form_tag :action => 'save' do %>  
      
          <p>
            Please input a pool name:
              <%= text_field_tag 'pool_name' %>
          </p>
        
          <p>
            Please input the teams for each of the  <%= @number %> matches :
          </p>
          
          <table>
          
            <tr>
              <th> Match # </th>
              <th> Local </th>
              <th> V.S. </th>
              <th> Visitor </th>
            </tr>
              <% @number.times do |i| %>
                  <tr> 
                        <td class="matches_table_td"><%=h i+1 %></td>
                        <td class="matches_table_td"> <%= text_field_tag names[i*2] %> </td>
                        <td class="matches_table_td">v.s.</td>
                        <td class="matches_table_td"> <%= text_field_tag names[i*2+1]%> </td>
                  </tr>
              <%end%>
         </table>
        <%= submit_tag 'Save' %>
       <% end %> 
   </div>