  <div id="save_concluded_pool" 
				<% if  session["type_user"].to_s == $admin %>  
					 style="position: absolute; left: 320px; top: 50px; z-index:1;"
				<% else %>
						style="position: absolute; left: 300px; top: 50px; z-index:1;"
				<% end %>
>

<h2> Pool  is  concluded with the following results</h2> 
      
<table>
       <tr>
             <th> Match # </th>
             <th> Local </th>
             <th> V.S. </th>
             <th> Visitor </th>
             <th> Winner </th>
      </tr>
      <% i = 1%>
      <% @table_matches.each do |match| %>
                
                <tr>
                    <td class="matches_table_td"><%=h i %></td>
                    <td class="matches_table_td"> <%=h match.local %> </td>
                    <td class="matches_table_td">v.s.</td>
                    <td class="matches_table_td"> <%=h match.visitor %> </td>
                    <td class="matches_table_td"> <%=h match.result %> </td>
                </tr>
                <% i = i + 1%>
      <%end%>
  </table>  

  </div>   