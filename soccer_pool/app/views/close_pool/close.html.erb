<div id="closing_pool" 
				<% if  session["type_user"].to_s == $admin %>  
					 style="position: absolute; left: 320px; top: 50px; z-index:1;"
				<% else %>
						style="position: absolute; left: 300px; top: 50px; z-index:1;"
				<% end %>
>
		<% if @unclose_pool.nil?%>
		
      <h2> Close the Pool </h2> 
      
      
      <% form_tag :action => 'change_status_to_close' do %>
          <p>
            Are you sure you want to close the current pool? 
          </p>
      
          <%= submit_tag 'Yes' %>
       <% end %>
       
       
    <% else %>   
			<br />
			<br />
			<br />
			<h2 align = "center"><%= @unclose_pool %></h2>
		<% end %>
</div>  